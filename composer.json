{
  "name": "hamedhaghi/countries",
  "description": "A PHP client for the RestCountries API",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Hamed Haghi",
      "email": "hamedhaghi07@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Hamed\\Countries\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hamed\\Countries\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.2",
    "guzzlehttp/guzzle": "^7.0",
    "symfony/cache": "^6.0",
    "symfony/property-access": "^6.0",
    "symfony/serializer": "^6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.7",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "scripts": {
    "test": "phpunit",
    "analyze": "phpstan analyse src --level=5",
    "fix": "php-cs-fixer fix .",
    "coverage": "phpunit --coverage-html tests/coverage",
    "check": [
      "@test",
      "@analyze",
      "@fix"
    ]
  },
  "config": {
    "sort-packages": true
  }
}
