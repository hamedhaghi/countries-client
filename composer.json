{
    "name": "hamed/countries",
    "description": "A PHP client for the RestCountries API",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Hamed Haghi",
            "email": "hamedhaghi07@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Hamed\\Countries\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hamed\\Countries\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.0 <8.4",
        "guzzlehttp/guzzle": "^6.5",
        "symfony/cache": "3.4.*",
        "symfony/property-access": "3.4.*",
        "symfony/serializer": "3.4.*",
        "vlucas/phpdotenv": "^4.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6",
        "phpstan/phpstan": "^0.9.3",
        "friendsofphp/php-cs-fixer": "^2.15"
    },
    "scripts": {
        "test": "phpunit",
        "analyze": "phpstan analyse src --level=5",
        "fix": "php-cs-fixer fix ."
    },
    "config": {
        "sort-packages": true
    }
}
